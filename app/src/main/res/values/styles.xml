<resources>

    <style name="AppThemeG" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/BACWhite</item>
        <item name="android:colorBackground">@color/BACWhite</item>
        <item name="colorPrimary">@color/Salmon</item>
        <item name="colorPrimaryDark">@color/DarkSalmon</item>
        <item name="colorAccent">@color/Yellow</item>


        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!--<item name="android:buttonStyle">@style/Button.Tinted</item>-->

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppTheme.Dialog.Red</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Red</item>
    </style>

    <!-- Green Dialog Theme -->
    <style name="AppTheme.Dialog.Red" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/Salmon</item>
        <item name="colorPrimaryDark">@color/DarkSalmon</item>
        <item name="colorAccent">@color/Yellow</item>
    </style>

    <!-- Green Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Red" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/Red</item>
        <item name="colorPrimaryDark">@color/Red</item>
        <item name="colorAccent">@color/Yellow</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:colorButtonNormal">@color/Yellow</item>
        <item name="android:textColor">@color/BACWhite</item>
        <item name="android:colorControlNormal">@color/Yellow</item>
        <item name="android:colorControlActivated">@color/Yellow</item>
        <item name="android:colorControlHighlight">@color/DarkYellow</item>
    </style>

    <style name="Button.Tinted" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/Yellow</item>
        <item name="colorControlHighlight">@color/DarkYellow</item>
        <item name="android:colorControlNormal">@color/Yellow</item>
        <item name="android:colorControlActivated">@color/Yellow</item>
        <item name="android:textColor">@android:color/white</item> </style>



    <style name="SplashScreen" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <style name="Divider">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppearanceText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/DarkYellow</item>
        <item name="android:editTextBackground">@color/BACOrange</item>
    </style>



</resources>
